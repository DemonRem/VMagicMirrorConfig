    <sys:String x:Key="Layout_HidVisible">Visible</sys:String>

    <sys:String x:Key="Layout_HidReactToKeyboard">Enable keyboard motion</sys:String>
    <sys:String x:Key="Layout_HidReactToMouse">Enable mouse motion</sys:String>
    
