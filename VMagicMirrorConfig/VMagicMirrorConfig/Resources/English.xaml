<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xml:space="preserve"
                    >
    
    <!-- Top Tab -->
    <sys:String x:Key="TopBar_Home">Home</sys:String>
    <sys:String x:Key="TopBar_Window">Window</sys:String>
    <sys:String x:Key="TopBar_Layout">Layout</sys:String>
    <sys:String x:Key="TopBar_Light">Light</sys:String>
    <sys:String x:Key="TopBar_Startup">Startup</sys:String>
    
    <!-- Home -->
    <sys:String x:Key="Home_LoadVrm">Load VRM</sys:String>
    <sys:String x:Key="Home_LoadVrmOnNextStartup">Load current VRM on next startup</sys:String>
    <sys:String x:Key="Home_OssLicense">OSS License</sys:String>
    
    <!-- Common in Config -->
    <sys:String x:Key="ConfigCommon_ApplyToNextStartup">Apply current setting on next startup</sys:String>
    <sys:String x:Key="ConfigCommon_Reset">Reset</sys:String>
    <sys:String x:Key="ConfigCommon_Save">Save</sys:String>
    <sys:String x:Key="ConfigCommon_Load">Load</sys:String>
    
    <!-- Window Setting -->
    <sys:String x:Key="Window_BackgroundColor">Background</sys:String>
    <sys:String x:Key="Window_Transparent">Transparent Window</sys:String>
    <sys:String x:Key="Window_Draggable">(When Transparent)Drag character to move</sys:String>
    <sys:String x:Key="Window_TopMost">Always Foreground</sys:String>
    
    <sys:String x:Key="Window_EnableInitialPlacement">Move window to specific position on startup</sys:String>
    <sys:String x:Key="Window_InitialPositionX">X(Left = 0)</sys:String>
    <sys:String x:Key="Window_InitialPositionY">Y(Top = 0)</sys:String>
    <sys:String x:Key="Window_FetchUnityWindowPos">Check current window position</sys:String>
    <sys:String x:Key="Window_MoveWindow">Move to specified position</sys:String>

    <!-- Layout Setting -->
    
    <!-- Layout : Character -->
    <sys:String x:Key="Layout_Character">Character</sys:String>
    
    <!-- Layout : Character : Hand Motion -->
    <sys:String x:Key="Layout_CharacterMotion">Hand Motion</sys:String>
    <sys:String x:Key="Layout_WristToHandTip">Wrist-Hand tip length [cm]</sys:String>
    <sys:String x:Key="Layout_WristToPalm">Wrist-Palm length [cm]</sys:String>
    <sys:String x:Key="Layout_HandYOffsetBasic">Hand height adjust [cm]</sys:String>
    <sys:String x:Key="Layout_HandYOffsetAfterKeyDown">(Press key)Hand height adjust [cm]</sys:String>
    <sys:String x:Key="Layout_EnablePresenterMotion">Presentation-like hand motion</sys:String>
    <sys:String x:Key="Layout_PresenterArmMotionScale">Presentation-like motion scale [%]</sys:String>

    <!-- Layout : Character : Wait Motion -->
    <sys:String x:Key="Layout_WaitMotion">Wait motion</sys:String>
    <sys:String x:Key="Layout_EnableWaitMotion">Enable</sys:String>
    <sys:String x:Key="Layout_WaitMotionScale">Scale [%]</sys:String>
    <sys:String x:Key="Layout_WaitMotionPeriod">Period [sec]</sys:String>

    <!-- Layout : Character : Other Motion -->
    <sys:String x:Key="Layout_OtherMotion">Other motions</sys:String>    
    <sys:String x:Key="Layout_EnableTouchTyping">Head motion like touch typing</sys:String>
    <sys:String x:Key="Layout_EnableLipSync">Enable Lip Sync</sys:String>
    <sys:String x:Key="Layout_MicrophoneName">Microphone Name</sys:String>    

    <!-- Layout : Camera -->
    <sys:String x:Key="Layout_Camera">Camera</sys:String>
    <sys:String x:Key="Layout_CameraHeight">Height [cm]</sys:String>
    <sys:String x:Key="Layout_CameraDistance">Distance [cm]</sys:String>
    <sys:String x:Key="Layout_CameraAngle">Angle [deg]</sys:String>

    <!-- Layout : Devices -->
    <sys:String x:Key="Layout_Devices">Input Devices</sys:String>
    
    <!-- Layout : Devices : HID (Keyboard / Mouse Pad) -->
    <sys:String x:Key="Layout_Hid">Keyboard &amp; Mouse Pad</sys:String>
    <sys:String x:Key="Layout_HidHeight">Height [cm]</sys:String>
    <sys:String x:Key="Layout_HidHorizontalScale">Size [%]</sys:String>
    <sys:String x:Key="Layout_HidHorizontalScale_Tooltip">Specify the size of keyboard and mouse. When smallen, the devices are close to the character.</sys:String>
    <sys:String x:Key="Layout_HidVisible">Visible</sys:String>

    <sys:String x:Key="Layout_HidReactToKeyboard">Enable keyboard motion</sys:String>
    <sys:String x:Key="Layout_HidReactToMouse">Enable mouse motion</sys:String>
    
    <!-- Layout : Devices : Gamepad -->
    <sys:String x:Key="Layout_Gamepad">Gamepad</sys:String>
    
    <sys:String x:Key="Layout_GamepadEnable">Enable Input Capture</sys:String>
    <sys:String x:Key="Layout_GamepadDeviceNumber">Device Number</sys:String>
    
    <sys:String x:Key="Layout_GamepadHeight">Height [cm]</sys:String>
    <sys:String x:Key="Layout_GamepadHorizontalScale">Size [%]</sys:String>
    <sys:String x:Key="Layout_GamepadVisible">Visible</sys:String>
    <sys:String x:Key="Layout_GamepadLeanMotion">Lean character by directional input</sys:String>

    <sys:String x:Key="Layout_GamepadLean_None">None</sys:String>
    <sys:String x:Key="Layout_GamepadLean_LeftButtons">Left Buttons</sys:String>
    <sys:String x:Key="Layout_GamepadLean_LeftStick">Left Stick</sys:String>
    <sys:String x:Key="Layout_GamepadLean_RightStick">Right Stick</sys:String>

    <sys:String x:Key="Layout_GamepadLean_Reverse">Reverse direction to lean</sys:String>
    <sys:String x:Key="Layout_GamepadLean_ReverseHorizontal">Left / Right</sys:String>
    <sys:String x:Key="Layout_GamepadLean_ReverseVertical">Forward / Backword</sys:String>
        
    
    <!-- Light Setting -->
    <sys:String x:Key="Light">Light</sys:String>
    <sys:String x:Key="Light_Intensity">Intensity [%]</sys:String>
    <sys:String x:Key="Bloom">Bloom</sys:String>
    <sys:String x:Key="Bloom_Intensity">Intensity [%]</sys:String>
    <sys:String x:Key="Bloom_Threshold">Threshold [%]</sys:String>
    
    <!-- Startup Setting -->
    <sys:String x:Key="Startup">Settings to load on next startup</sys:String>
    <sys:String x:Key="Startup_Vrm">VRM</sys:String>
    <sys:String x:Key="Startup_Window">Window</sys:String>
    <sys:String x:Key="Startup_Layout">Layout</sys:String>
    <sys:String x:Key="Startup_Light">Light</sys:String>
    
</ResourceDictionary>