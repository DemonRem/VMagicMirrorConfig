    <sys:String x:Key="Layout_Camera">Camera</sys:String>
    <sys:String x:Key="Layout_EnableFreeCameraMode">Free Camera Mode</sys:String>
    <sys:String x:Key="Layout_CurrentCameraPosition">Camera Position (x, y, z, rx, ry, rz)</sys:String>
    <sys:String x:Key="Layout_Camera_ResetPosition">Reset Position</sys:String>


    <!-- Layout : Keyboard / Mouse Pad -->
    <sys:String x:Key="Layout_Hid">Keyboard</sys:String>
    <sys:String x:Key="Layout_HidHeight">Height [cm]</sys:String>
    <sys:String x:Key="Layout_HidHorizontalScale">Size [%]</sys:String>
