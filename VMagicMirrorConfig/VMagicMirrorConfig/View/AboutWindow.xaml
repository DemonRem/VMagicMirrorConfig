<Window x:Class="Baku.VMagicMirrorConfig.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Baku.VMagicMirrorConfig"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        Title="About VMagicMirror"
        Height="100" Width="200"
        ResizeMode="NoResize"
        >
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="0,2"/>
        </Style>
    </Window.Resources>
    <StackPanel HorizontalAlignment="Center"
                VerticalAlignment="Center">

        <TextBlock Text="VMagicMirror ver0.1"/>
        <TextBlock Text="Copyright (c) 2019 獏星(ばくすたー)"/>
        <TextBlock ToolTip="https://github.com/malaybaku/VMagicMirror">
            <Hyperlink Click="OnClickHyperLinkToGitHub">Source (GitHub)</Hyperlink> 
        </TextBlock>

    </StackPanel>
</Window>
